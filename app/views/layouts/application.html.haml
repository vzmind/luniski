!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}/
    %title EmailVision Customer Portal
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", :type => "text/javascript"}
    = stylesheet_link_tag    "style"
    = javascript_include_tag "/assets/superfish.js"
    = javascript_include_tag "/assets/jquery.coda-slider-2.0.js"
    = javascript_include_tag "/assets/jquery.easing.1.3.js"
    = javascript_include_tag "/assets/jquery.easing.1.3.js"
    = javascript_include_tag "/assets/jquery.poshytip.min.js"
    = javascript_include_tag "/assets/jquery-ui-1.8.5.custom.min.js"
    = javascript_include_tag "/assets/custom.js"
    /[if IE 6]
      <link rel="stylesheet" href="css/ie.css" />
  %body
    = render 'shared/header'
    #the_body
      .container_12
        = yield
        .grid_4
          = render 'shared/sidebar'
        / grid_4
        .clear
      / container_12
    / the_body
    = render 'shared/footer'
