  .grid_8.alpha.omega
    #case-show
      .case-show
        .field
          .label Case Number
          .text=  @case['CaseNumber']
          .clear
        .field
          .label Type
          .text= @case['Type']
          .clear
        .field
          .label Reason
          .text= @case['Reason']
          .clear
        .field
          .label Status 
          .textl= @case['Status']
          .clear
        .field
          .label Subject 
          .text= @case['Subject']
          .clear
        .field
          .label Description 
          .text= @case['Description']
          .clear
      .case-comments
        = "Your case has %s comments" % @comments.count if @comments.count > 0
        - @comments.each do |comment|
          .comments
            .label
              = "%s said:" % "toto"
            .comment
              = comment['CommentBody']
            .clear

  .clear
