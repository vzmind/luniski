gem 'sass'
gem 'databasedotcom'
gem 'jquery-rails'
gem 'omniauth', "~> 0.2.4"

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.1.4'
  gem 'coffee-rails', '~> 3.1.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'heroku'
  gem 'rspec-rails'
  gem 'ruby-debug19', :require => 'ruby-debug'
end

group :test do
  gem 'factory_girl_rails'
end

group :production do
  gem 'pg'
end


